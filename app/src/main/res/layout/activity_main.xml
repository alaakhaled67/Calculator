<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#958888"
        android:gravity="right"
        android:paddingTop="10pt"
        android:paddingRight="4pt"
        android:paddingBottom="6pt"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="44sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/AC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#958D8A"
                android:onClick="clear"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="*/-"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mod"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="setOperator"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="setOperator"
                android:paddingBottom="1pt"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/multi"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="setOperator"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="setOperator"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bt1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="clicked"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="setOperator"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="clicked"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="#958D8A" />

        <Button
            android:id="@+id/dot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="clicked"
            android:text="."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="result"
            android:text="="
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>